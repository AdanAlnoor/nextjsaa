{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/auth/*": [
        "./src/features/auth/*"
      ],
      "@/admin/*": [
        "./src/features/admin/*"
      ],
      "@/library/*": [
        "./src/features/library/*"
      ],
      "@/projects/*": [
        "./src/features/projects/*"
      ],
      "@/cost-control/*": [
        "./src/features/cost-control/*"
      ],
      "@/estimates/*": [
        "./src/features/estimates/*"
      ],
      "@/analytics/*": [
        "./src/features/analytics/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
