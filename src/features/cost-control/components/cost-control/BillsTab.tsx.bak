            </Button>
            <Button size="sm" variant="outline" onClick={() => handleEditBillClick(selectedBill)}>Edit</Button>
            <Button size="sm" variant="destructive" onClick={() => handleDeleteBill(selectedBill.id)}>Delete</Button>
          </div>
        </div>

        {/* General Info Card */}
